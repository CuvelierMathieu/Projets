<Window x:Class="TP_NORTHWND.Quantite"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP_NORTHWND"
        mc:Ignorable="d"
        Title="Quantite" Height="300" Width="300" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Margin="0">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Veuillez indiquer la nouvelle quantité désirée :"/>
            <TextBox x:Name="textboxValeur" MinWidth="100" MaxHeight="23" MinHeight="23" HorizontalAlignment="Right" />
            <Button Content="Valider" MaxWidth="50" HorizontalAlignment="Right" Margin="5" IsDefault="True" Click="Validation_Click"/>
        </StackPanel>
    </Grid>
</Window>
